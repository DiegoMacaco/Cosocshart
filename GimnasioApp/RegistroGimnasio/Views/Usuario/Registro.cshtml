@model RegistroGimnasio.Models.Usuario

<h2>Registro de Usuario</h2>

<form asp-action="Registro" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Identificacion"></label>
        <input asp-for="Identificacion" class="form-control" />
        <span asp-validation-for="Identificacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PeriodoMeses"></label>
        <input asp-for="PeriodoMeses" class="form-control" type="number" min="1" max="36" />
        <span asp-validation-for="PeriodoMeses" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@if (ViewBag.Mensaje != null)
{
    <p>@ViewBag.Mensaje</p>
}
